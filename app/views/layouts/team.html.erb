<%= extends :with_sidebar do %>
  <% content_for :sidebar_header do %>
    <%= @team.name %>
  <% end %>
  
  <% content_for :sidebar_content do %>
    <% if false %>
      <%= render "sidebar_link", path: [@team, :regions] do %>
        <i class="fas fa-map-marked fa-fw"></i>
        Regions
      <% end %>
      <%= render "sidebar_link", path: [@team, :label_schemas] do %>
        <i class="fas fa-tags fa-fw"></i>
        Label schemas
      <% end %>
    <% end %>
    <%= render "sidebar_link", path: [@team, :projects] do %>
      <div class="d-flex align-items-center">
        <div class="flex-grow-1">
          <i class="fas fa-code fa-fw"></i>
          Projects
        </div>
      </div>
    <% end %>    
    <%= render "sidebar_link", path: [@team, :extents] do %>
      <div class="d-flex align-items-center">
        <div class="flex-grow-1">
          <i class="fas fa-map fa-fw"></i>
          Extents
        </div>
      </div>
    <% end %>
    <%= render "sidebar_link", path: [@team, :expressions] do %>
      <div class="d-flex align-items-center">
        <div class="flex-grow-1">
          <i class="fas fa-superscript fa-fw"></i>
          Expressions
        </div>
      </div>
    <% end %>
    <%= render "sidebar_link", path: [@team, :datasets] do %>
      <div class="d-flex align-items-center">
        <div class="flex-grow-1">
          <i class="fas fa-table fa-fw"></i>
          Datasets
        </div>
      </div>
    <% end %>
    
    <% if false %>
      <%= render "sidebar_link", path: [@team, :models] do %>
        <div class="d-flex align-items-center">
          <div class="flex-grow-1">
            <i class="fas fa-code fa-fw"></i>
            Models
          </div>
          <span class="badge badge-secondary">Legacy</span>
        </div>
      <% end %>
    <% end %>    


    <% unless @team.memberships.find_by(user: current_user)&.guest? %>
      <%= render "sidebar_link", path: [@team, :memberships] do %>
        <i class="fas fa-users fa-fw"></i>
        People
      <% end %>
    <% end %>

    <% unless @team.memberships.find_by(user: current_user)&.guest? %>
      <%= render "sidebar_link", path: edit_team_path(@team) do %>
        <i class="fas fa-sliders-h fa-fw"></i>
        Settings
      <% end %>
    <% end %>
    
  <% end %>

  <%= yield %>
<% end %>
